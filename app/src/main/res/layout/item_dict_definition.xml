<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.romankaranchuk.translator.ui.view.TextGenLayout
        android:id="@+id/layout_text_transcription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textColor="@android:color/black"
        app:textTextStyle="normal"
        app:genColor="@android:color/darker_gray"
        app:genTextStyle="italic"/>

    <TextView
        android:id="@+id/tv_label_part_of_speech"
        android:layout_below="@id/layout_text_transcription"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/colorMean"
        android:gravity="center"/>

    <RelativeLayout
        android:id="@+id/header_dict_defin_item"
        android:layout_below="@id/tv_label_part_of_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/number_dict_defin_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/transl_dict_defin_item"
            android:layout_width="250dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/number_dict_defin_item"
            android:layout_toEndOf="@id/number_dict_defin_item"
            android:text="время ср, пора ж, время ср, пора ж, время ср, пора ж, время ср, пора ж, "/>
    </RelativeLayout>

    <TextView
        android:layout_below="@id/header_dict_defin_item"
        android:id="@+id/mean_dict_defin_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(period, time, moment, pore)"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorMean"
        android:textIsSelectable="true"/>

    <TextView
        android:layout_below="@id/mean_dict_defin_item"
        android:id="@+id/expr_dict_defin_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dayling saving time -- летнее время\ntake some time -- занять некоторое время"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/colorExpr"
        android:textIsSelectable="true"/>
</RelativeLayout>
