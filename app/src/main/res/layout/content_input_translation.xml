<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp">

    <com.karanchuk.roman.testtranslate.ui.view.CustomEditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/translate_hint"
        android:scrollbars="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="60dp"
        android:paddingEnd="60dp"
        android:paddingTop="5dp"
        android:paddingBottom="42dp"
        android:gravity="top|start"
        android:imeOptions="actionDone"
        android:cursorVisible="false"
        android:background="@layout/edittext_border"/>

    <ImageButton
        android:id="@+id/clear_edittext"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cancel_dark512"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"/>

    <include
        android:id="@+id/include_content_micro_waves"
        layout="@layout/content_micro_waves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <ImageButton
        android:id="@+id/get_audio_spelling"
        android:layout_height="38dp"
        android:layout_width="38dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tool_light512"
        android:background="@android:color/transparent"
        android:layout_gravity="end"/>

    <ImageButton
        android:id="@+id/get_source_voice"
        android:layout_height="38dp"
        android:layout_width="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/get_audio_spelling"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/camera_dark512"
        android:background="@android:color/transparent"/>

    <ProgressBar
        android:id="@+id/get_source_voice_progress"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
