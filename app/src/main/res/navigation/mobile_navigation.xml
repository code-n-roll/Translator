<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_translator">

    <fragment
        android:id="@+id/navigation_translator"
        android:name="com.romankaranchuk.translator.ui.translator.TranslatorFragment"
        android:label="Translator"
        tools:layout="@layout/fragment_translator" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.romankaranchuk.translator.ui.stored.StoredFragment"
        android:label="Stored"
        tools:layout="@layout/fragment_stored" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.romankaranchuk.translator.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>